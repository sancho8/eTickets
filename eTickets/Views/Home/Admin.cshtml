
@{
    ViewBag.Title = "Admin";
}

<h2 align="center">Панель администратора</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Список карт</h3>
            <div id="cards-table-holder-admin">
                @Html.Partial("AdminCardTableView")
            </div>
        </div>

        <div class="col-md-6">
            <h3>Список валидаторов</h3>
            <div id="validators-table-holder-admin">
                @Html.Partial("AdminValidatorTableView")
            </div>
            <div class="col-md-6" >
                @using (Ajax.BeginForm("AddCard", "Home", new AjaxOptions { UpdateTargetId = "cards-table-holder-admin"}))
                {
                    <h3>Добавить карту</h3>
                    <div class="form-group">
                        <label for="cardNumber">Введите номер карты:</label>
                        <input type="number" name="cardNumber" class="form-control" id="card-number-holder">
                    </div>
                    <input class="btn btn-primary" type="submit" value="Добавить">
                    <div class="alert-danger" id="add-card-error-msg-holder" hidden style="color:red"></div>
                }
            </div>
        </div>
    </div>
</div>