<table class="table table-responsive table-bordered table-inverse">
    <thead class="thead-inverse">
        <tr class="success">
            <th>Id</th>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody id="operations-holder">
        @foreach (Operation op in Model)
            {

            <tr style="color:green">
                <td>@op.Id</td>
                <td>@op.Date</td>
                <td>@op.Description</td>
                <td>@op.Amount</td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info">
    <strong>Balance:</strong> @ViewBag.balance
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/scripts/mainScript.js")
